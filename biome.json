{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"include": ["src/**/*.ts"],
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentStyle": "tab",
		"lineEnding": "crlf"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"noNonNullAssertion": "off",
				"useNamingConvention": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noThisInStatic": "off"
			},
			"correctness": {
				"useImportExtensions": "off",
				"noNodejsModules": "off"
			},
			"suspicious": {
				"noEmptyBlockStatements": "off"
			},
			"performance": {
				"useTopLevelRegex": "off",
				"noBarrelFile": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
